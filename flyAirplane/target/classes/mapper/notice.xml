<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice">
	
	<select id="select" resultType="com.airplane.pension.dto.NoticeDto">
		select * from notice
	</select>
	
	<select id="selectOne" parameterType="int" resultType="com.airplane.pension.dto.NoticeDto">
		select * from notice 
		where idx = #{idx}	
	</select>
	
	<insert id="insert">
		insert into notice
		(title, name, content, wdate)
		values (#{title}, #{name}, #{content}, #{wdate})
	</insert>
	
	<update id="update" parameterType="com.airplane.pension.dto.NoticeDto">
		update notice
		set title = #{title}, 
			content = #{content}
		where idx = #{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from notice
		where idx = #{idx}
	</delete>
	
	<select id="listCriteria" resultType="com.airplane.pension.dto.NoticeDto">
		<![CDATA[
		select * from notice
		order by idx desc
		limit #{pageStart}, #{perPageNum}
		]]>
	</select>
</mapper>